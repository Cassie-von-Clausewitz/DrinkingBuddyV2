<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>

        <variable
            name="notification"
            type="com.kyleriedemann.drinkingbuddy.data.models.Notification"/>

        <variable
            name="viewModel"
            type="com.kyleriedemann.drinkingbuddy.ui.notifications.NotificationsViewModel"/>
    </data>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/notification_list_item_card"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:clickable="true"
        android:onClick="@{() -> viewModel.openDetails(notification)}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/notification_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/list_item_padding"
            android:paddingBottom="@dimen/list_item_padding">

            <ImageView
                android:id="@+id/notification_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_unread"
                android:visibility="@{notification.read ? View.INVISIBLE : View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/reading_values"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:autoSizeTextType="uniform"
                android:text="@{notification.title}"
                android:textAlignment="viewStart"
                android:textAppearance="@android:style/TextAppearance.Material.Headline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toEndOf="@+id/notification_read"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Notification Title" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/reading_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:autoSizeTextType="uniform"
                android:maxLines="3"
                android:paddingEnd="8dp"
                android:text="@{notification.message}"
                android:textAlignment="viewStart"
                android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/reading_values"
                app:layout_constraintTop_toBottomOf="@+id/reading_values"
                tools:text="Notification Message" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>